<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen">
    <%- include('./partial/nav') %>
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold text-center mb-10">Profile Page</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% loop.forEach((elem) => { %>
                <div class="bg-white p-6 rounded-lg shadow-md flex flex-col items-center">
                    <img class="w-24 h-24 rounded-full object-cover mb-4" src="/images/<%= elem.image %>" alt="Profile Image">
                    <p class="text-lg font-semibold"><%= elem.username %></p>
                    <p class="text-gray-600"><%= elem.email %></p>
                    <p class="text-gray-600"><%= elem.password %></p>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
